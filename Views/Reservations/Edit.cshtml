@model HallBookingProject.Models.Reservation

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdBook" />
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" value="Accept" type="submit" />
                <input asp-for="Status" class="form-control" value="Reject" type="submit"  />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartEvent" class="control-label"></label>
                <input asp-for="StartEvent" class="form-control" />
                <span asp-validation-for="StartEvent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndEvent" class="control-label"></label>
                <input asp-for="EndEvent" class="form-control" />
                <span asp-validation-for="EndEvent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hallid" class="control-label"></label>
                <select asp-for="Hallid" class="form-control" asp-items="ViewBag.Hallid"></select>
                <span asp-validation-for="Hallid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Userid" class="control-label"></label>
                <select asp-for="Userid" class="form-control" asp-items="ViewBag.Userid"></select>
                <span asp-validation-for="Userid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payid" class="control-label"></label>
                <select asp-for="Payid" class="form-control" asp-items="ViewBag.Payid"></select>
                <span asp-validation-for="Payid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

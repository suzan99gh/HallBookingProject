@model HallBookingProject.Models.Reservation

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdBook" />
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input  asp-for="Status" asp-controller="Reservations" asp-action="SendEmail" class="form-control" value="Accept" type="submit" /> 
                <input asp-for="Status" asp-controller="Reservations" asp-action="SendEmail"  class="form-control" value="Reject" type="submit"  />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>


              <input type="hidden" asp-for="StartEvent" />
              <input type="hidden" asp-for="EndEvent" />
              <input type="hidden" asp-for="Hallid" />
              <input type="hidden" asp-for="Userid" />
              <input type="hidden" asp-for="Payid" />


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

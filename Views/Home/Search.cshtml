    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />



    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>



  <div class="row">
       <div class="col-7">
           <form action="Search" method="post">
               <label for="StartEvent">Start date</label>
               <input  type="date" class="form-control" name="StartEvent" placeholder="Start Date" />
                <label for="EndEvent">End Date</label>
               <input  type="date" class="form-control" name="EndEvent" placeholder="End Date" />
               <br />
               <button type="submit" class="btn btn-danger"> Search</button>
           </form>
       </div>
   </div>
   <br />
   <br />
    <div class="row">
        <div class="col-10">
            <table class="table" id="example"  >
                <thead  >
                    <tr>
                    <th>Customer First Name</th>
                    <th>Customer Last Name</th>
                    <th>Hall Name</th>
       
                    <th>Date From</th>
                    <th>Date To</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model ){
                        <tr>
                        
                              <td>
                                @Html.DisplayFor(modelItem => item.User.Fname)
                            </td>
                                 <td>
                                @Html.DisplayFor(modelItem => item.User.Lname)
                            </td>
                                <td>
                                @Html.DisplayFor(modelItem => item.Hall.HallName)
                            </td>
                              <td>
                                @Html.DisplayFor(modelItem => item.StartEvent)
                            </td>
                               <td>
                                @Html.DisplayFor(modelItem => item.EndEvent)
                            </td>
            
                        </tr>

                     }

            </tbody>
            </table>

       </div>
    </div>

                                
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>



<script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js" defer></script>



<script src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js" defer></script>

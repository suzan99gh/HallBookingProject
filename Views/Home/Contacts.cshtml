    <!-- END section -->

    
    <section class="section bg-primary contact-section" >
      <div class="container">
        <div class="row">
          <div class="col-md-7">
            
                 <form form asp-action="Create"  class="bg-white p-md-5 p-4 mb-5" style="margin-top: -150px;">
              <div class="row">

                 <div class="col-md-6 form-group">
                     <label asp-for="FullName" class="control-label"></label>
                     <input asp-for="FullName" class="form-control" />
                     <span asp-validation-for="FullName" class="text-danger"></span>
                 </div>
              </div>

              <div class="row">
               <div class="col-md-12 form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
               </div>
              </div>


             <div class="row">
               <div class="col-md-12 form-group">
                <label asp-for="Message" class="control-label">Write Your Message</label>
                <textarea  asp-for="Message" class="form-control " cols="30" rows="8"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
               </div>
             </div>



             <div class="row">
                 <div class="col-md-6 form-group" >
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
             </div>

            </form>

          </div>
          <div class="col-md-5">
            <div class="row">
              <div class="col-md-10 ml-auto contact-info">
   
                <p><span class="d-block">Phone:</span> <span> 0791190830</span></p>
                <p><span class="d-block">Email:</span> <span> suzan.gh99@gmail.com</span></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
 

@model IEnumerable<Hall> 

@{
    Layout = "~/views/Shared/_HomeLayout1.cshtml";
}

@*style="background-image: url(~/assets/Home/img/hall_1.jpg)"*@

    <section class="site-hero overlay page-inside" style="background-color:#B795A6">
      <div class="container">
        <div class="row site-hero-inner justify-content-center align-items-center">
          <div class="col-md-10 text-center">
            <h1 class="heading" data-aos="fade-up">Choose your favorite hall</h1>
            <p class="sub-heading mb-5" data-aos="fade-up" data-aos-delay="100">Events, news and activities in the hotel.</p>
          </div>
        </div>
        <!-- <a href="#" class="scroll-down">Scroll Down</a> -->
      </div>
    </section>
    <!-- END section -->

    
    <section class="section bg-light post">
      <div class="container">
        <div class="row">
          <div class="col-md-8">

              @foreach (var item in Model)
             {
                 
            
            <div class="row mb-5">
              <div class="col-md-6">
                <div class="media media-custom d-block mb-4">
                  <a asp-controller="Reservations" asp-action="Create" asp-route-id="@item.IdHall " name="@item." class="mb-4 d-block"><img src=@Url.Content("~/Image/"+item.Img1) asp-append-version="true" alt="Image of Hall" class="img-fluid"></a>
                  <div class="media-body">
                    
                    <h2 class="mt-0 mb-3"><a asp-controller="Reservations" asp-action="Booking"     >@item.HallName</a></h2>
                    <span class="meta-post">@item.HallDesc</span>
                  </div>
                </div>
              </div>
             

            </div>

             }




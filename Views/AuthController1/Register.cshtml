<body>
    <div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
        <div class="wrapper wrapper--w680">
            <div class="card card-4">
                <div class="card-body">
                    <h2 class="title">Registration Form</h2>
                    <form method="POST" asp-action="Register" >
                        <div class="row row-space">
                            <div class="col-6">
                                <div class="input-group">
                                    <label class="label">first name</label>
                                    <input asp-for="Fname"  class="input--style-4" type="text" >
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="input-group">
                                    <label class="label">last name</label>
                                    <input asp-for="Lname" class="input--style-4" type="text">
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-6">
                                <div class="input-group">
                                    @*<label class="label">Password</label>
                                   
                                        <input class="input--style-4 js-datepicker" type="password" name="password">
                                        <i class="zmdi zmdi-calendar-note input-icon js-btn-calendar"></i>*@
                                   
                                        <label class="label">Password</label>
                                    <input  class="input--style-4" type="password" name="password">

                                </div>
                            </div>
                            <div class="col-6">
                       
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-6">
                                <div class="input-group">
                                    <label class="label">Email</label>
                                    <input asp-for="Email" class="input--style-4" type="email" >
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="input-group">
                                    <label class="label">Phone Number</label>
                                    <input asp-for="Phonenum" class="input--style-4" type="text" >
                                </div>
                            </div>
                        </div>


                        <div class="p-t-15">
                            <button class="btn btn--radius-2 btn--blue" type="submit" asp-action="Login"  >Submit</button>
                        </div>
                    </form>
                    <br />     <button class="btn btn--radius-2 btn--blue" type="submit" asp-controller="Home" asp-action="Index" >Back to home</button> <br /> <br /> 
                  <br /> <br />   <a  asp-action="Login"  > Back to login Page  </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery JS-->
